import &StandardImport

test "with class", ->
  class MyParser extends Parser
    @nodeBaseClass: require('./TODO_TestNodeClass').NodeBaseClassTestNode

    @rule
      root: /boo/

  mainNode = MyParser.parse "boo"
  assert.eq mainNode.toJs(), "boo!"

test "with plainObject", ->
  class MyParser extends Parser
    @nodeBaseClass:
      toJs: -> @toString() + "!"

    @rule
      root: /boo/

  mainNode = MyParser.parse "boo"
  assert.eq mainNode.toJs(), "boo!"
